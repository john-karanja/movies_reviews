<% if !user_signed_in? %>

  <div class="jumbotron">
    <h1>Your Favourite Movies Reviews</h1>
    <p>The best website on the planet to get non-biased reviews!</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
   </div>
   <% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-3 cold-md-3">
    <div class="thumbnail">
      <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
      </div>
    </div>
    <% end %>   
</div>